{
	"name": "plexus",
	"version": "1.0.0",
	"repository": "git@github.com:plexusjs/plexus",
	"author": "Philippe Clesca <hello@philippec.me>",
	"contributors": [
		"Nicolas Theck <contact@itsrems.com>"
	],
	"license": "MIT",
	"private": true,
	"scripts": {
		"core": "yarn workspace @plexusjs/core",
		"react": "yarn workspace @plexusjs/react",
		"next": "yarn workspace @plexusjs/next",
		"bootstrap": "lerna bootstrap",
		"dev": "yarn && nodemon",
		"prebuild": "rimraf packages/**/dist packages/**/tsconfig.tsbuildinfo",
		"build": "lerna run build --scope @plexusjs/core && lerna run build --scope @plexusjs/react && lerna run build",
		"prepublish": "yarn build",
		"prepublishOnly": "pinst --disable",
		"postpublish": "pinst --enable",
		"publish-canary": "lerna publish --canary prerelease --preid canary --force-publish --yes",
		"publish-stable": "lerna publish --yes --force-publish",
		"postinstall": "husky install",
		"test": "yarn build && jest -u"
	},
	"devDependencies": {
		"@babel/core": "^7.16.7",
		"@babel/preset-env": "^7.16.8",
		"@babel/preset-typescript": "^7.16.7",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.8",
		"babel-jest": "^27.4.6",
		"husky": "^7.0.4",
		"jest": "^27.4.7",
		"lerna": "^4.0.0",
		"node-fetch": "2",
		"nodemon": "^2.0.15",
		"pinst": "^2.1.6",
		"ts-jest": "^27.1.2",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	}
}
