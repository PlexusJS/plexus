{
	"name": "plexus",
	"version": "1.0.0",
	"repository": "git@github.com:plexusjs/plexus",
	"author": "Philippe Clesca <hello@philippec.me>",
	"contributors": [
		"Nicolas Theck <contact@itsrems.com>"
	],
	"license": "MIT",
	"private": true,
	"scripts": {
		"postinstall": "test -n \"$NO_YARN_POSTINSTALL\" || yarn run build",
		"core": "yarn workspace @plexusjs/core",
		"react": "yarn workspace @plexusjs/react",
		"next": "yarn workspace @plexusjs/next",
		"plexus-cli": "yarn workspace plexus-cli",
		"docs": "yarn workspace plexus-docs",
		"docs:generate:ref": "ts-node write-documentation.ts",
		"bootstrap": "lerna bootstrap --use-workspaces",
		"build": "lerna run build",
		"postbuild": "yarn docs:generate:ref",
		"dev": "nodemon --exec lerna run build",
		"prepublish": "yarn build",
		"prepublishOnly": "pinst --disable",
		"publish-canary": "lerna publish --canary --preid canary --yes",
		"publish-stable": "lerna publish --yes --force-publish",
		"publish": "lerna publish --preid canary",
		"postpublish": "pinst --enable",
		"test": "vitest",
		"test-ui": "vitest --ui",
		"format": "trunk fmt"
	},
	"devDependencies": {
		"@babel/cli": "^7.19.3",
		"@babel/core": "^7.20.5",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-proposal-object-rest-spread": "^7.20.2",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-typescript": "^7.18.6",
		"@testing-library/react": "^13.3.0",
		"@trunkio/launcher": "^1.2.3",
		"@types/fs-readdir-recursive": "^1.1.0",
		"@types/jest": "^27.4.0",
		"@types/jsdoc-to-markdown": "^7.0.3",
		"@types/node": "^17.0.8",
		"@types/react": "^18.0.17",
		"@types/react-dom": "^18.0.6",
		"@types/react-test-renderer": "^18.0.0",
		"@types/recursive-readdir": "^2.2.1",
		"@vitejs/plugin-react": "^2.0.1",
		"@vitest/ui": "^0.22.1",
		"babel-jest": "^27.4.6",
		"chalk": "4",
		"fs-readdir-recursive": "^1.1.0",
		"happy-dom": "^6.0.4",
		"jest": "^27.4.7",
		"jsdoc-babel": "^0.5.0",
		"jsdoc-to-markdown": "^8.0.0",
		"jsdom": "^20.0.1",
		"lerna": "^5.4.3",
		"node-fetch": "2",
		"nodemon": "^2.0.15",
		"nx": "^14.4.2",
		"pinst": "^2.1.6",
		"prettier": "^2.8.0",
		"react": "^18",
		"react-dom": "^18",
		"react-test-renderer": "^18.2.0",
		"recursive-readdir": "^2.2.3",
		"ts-jest": "^27.1.2",
		"ts-node": "^10.4.0",
		"typescript": "^4.9.3",
		"vite": "^3.0.9",
		"vitest": "^0.22.1",
		"yargs": "^17.4.1"
	},
	"workspaces": {
		"packages": [
			"packages/*",
			"cli/",
			"docs/"
		]
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	}
}
