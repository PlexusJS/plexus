{
  "name": "plexus",
  "version": "1.0.0",
  "repository": "git@github.com:plexusjs/plexus",
  "author": "Nicolas Theck <contact@itsrems.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel --no-cache",
    "build": "turbo run build",
    "prepublish": "lerna run prepublish",
    "publish-canary": "lerna version prerelease --preid canary --force-publish",
    "publish-stable": "lerna version --force-publish && release && node ./scripts/release-notes.js"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "turbo": "^1.0.25"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "test": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
