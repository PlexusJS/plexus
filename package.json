{
  "name": "plexus",
  "version": "1.0.0",
  "repository": "git@github.com:plexusjs/plexus",
  "author": "Nicolas Theck <contact@itsrems.com>",
  "contributors": [
    "Philippe Clesca <hello@philippec.me>"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "yarn && nodemon",
    "clean-build": "rimraf packages/**/dist packages/**/tsconfig.tsbuildinfo",
    "build": "yarn clean-build && turbo run build",
    "prepublish": "yarn build",
    "publish-canary": "lerna publish --canary prerelease --preid canary --force-publish --yes",
    "publish-stable": "lerna version --force-publish",
    "test": "yarn build && jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "babel-jest": "^27.4.6",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "node-fetch": "2",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "turbo": "^1.0.28",
    "typescript": "^4.5.4"
  },
  "turbo": {
    "baseBranch": "origin/master",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "test": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
