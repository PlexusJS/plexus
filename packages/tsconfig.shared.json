{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["es5", "es6", "es2017", "ES2018", "dom"],
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": false,
    "composite": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}